<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="Suite">    <!-- parallel="Methods" - To run methods parallely -->

<listeners>
  <listener class-name="FirstFramework.TestComponents.Listeners"/>
</listeners>

  <test thread-count="5" name="Submit Order Test">     <!-- Tethread-count="5" means it will run 5 methods -->
    <classes>
      <class name="FirstFramework.tests.SubmitOrderTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test thread-count="5" name="Error Validation Test">
    <classes>
      <class name="FirstFramework.tests.ErrorValidationsTest"/>
    </classes>
  </test> <!-- Test -->
  
  
</suite> <!-- Suite -->
